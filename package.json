{
  "name": "js-rtlsdr",
  "version": "0.0.1",
  "author": "Ben Chociej <ben@chociej.io>",
  "description": "Node.js wrapper around librtlsdr",
  "license": "GPL-2.0+",
  "repository": "bchociej/js-rtlsdr",
  "main": "index.js",
  "scripts": {
    "install": "node-gyp configure build",
